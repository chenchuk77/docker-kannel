# core group from main kannel.conf file
include = /etc/kannel/kannel.conf

# Proxy configuration
group = opensmppbox
bearerbox-host = localhost
bearerbox-port = 13001
opensmppbox-id = opensmppbox
opensmppbox-port = 2776
log-level = 0
our-system-id = smppbox
route-to-smsc = smsc-{{ channel.msisdn }}
log-file = /var/log/kannel/smppbox.log
smpp-logins = /etc/kannel/opensmppbox.users
use-systemid-as-smsboxid = true

